<?xml version="1.0"?>
<!DOCTYPE util PUBLIC "-//MMBase//DTD util config 1.0//EN" "http://www.mmbase.org/dtd/util_1_0.dtd">
<!-- LinkFinder is a 'tranformer' (org.mmbase.util.transformers.LinkFinder)
     and can e.g. be used as 'escaper' in Taglib.
     @since MMBase-1.8
     @version $Id: linkfinder.xml,v 1.2 2007-03-07 15:07:27 mmweb Exp $
     @author Michiel Meeuwissen
-->
<util>
  <properties>
    <property name="regexps" type="map">
      <!-- 
        Keys are regular expressions wich are matched to words, values are what they are to be replaced with.
        $0: the entire expiression
        $1: first capturing group http://java.sun.com/j2se/1.5.0/docs/api/java/util/regex/Pattern.html#cg
        etc.

      -->
      <entry><key>[^&amp;].*@.+</key>     <value>&lt;a href="mailto:$0"&gt;$0&lt;/a&gt;</value></entry>
      <entry><key>http://.+</key> <value>&lt;a href="$0"&gt;$0&lt;/a&gt;</value></entry>
      <entry><key>https://.+</key><value>&lt;a href="$0"&gt;$0&lt;/a&gt;</value></entry>
      <entry><key>ftp://.+</key>  <value>&lt;a href="$0"&gt;$0&lt;/a&gt;</value></entry>
      <entry><key>#([0-9]+)</key> <value>&lt;a href="http://www.mmbase.org/testing?portal=199&amp;page=546&amp;btemplate=fullview.jsp&amp;bugnumber=$1"&gt;$0&lt;/a&gt;</value></entry>
    </property>
  </properties>
</util>
