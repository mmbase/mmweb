<?xml version="1.0" ?>
<builder
    xmlns="http://www.mmbase.org/xmlns/builder"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.mmbase.org/xmlns/builder
                        http://www.mmbase.org/xmlns/builder.xsd"
    name="event" maintainer="mmbase.org" version="0" extends="object">
<status>active</status>

<searchage>14</searchage>
<names>
	<singular xml:lang="nl">Evenement</singular>
	<singular xml:lang="en">Event</singular>
	<singular xml:lang="us">Event</singular>
	<plural xml:lang="nl">Evenementen</plural>
	<plural xml:lang="en">Events</plural>
	<plural xml:lang="us">Events</plural>
</names>
<descriptions>
    <description xml:lang="en">Event or agenda item</description>
    <description xml:lang="nl">Evenenement of agenda item</description>
</descriptions>

<properties>
</properties>

<fieldlist>
	
    <field name="title">
      <descriptions>
        <description xml:lang="en">Title or name of this event</description>
        <description xml:lang="nl">Titel of naam van het evenement</description>
      </descriptions>
      <gui>
        <guiname xml:lang="en">Title</guiname>
        <guiname xml:lang="fr">Titre</guiname>
        <guiname xml:lang="nl">Titel</guiname>
        <guiname xml:lang="eo">Titolo</guiname>
      </gui>
      <editor>
        <positions>
          <list>1</list>
        </positions>
      </editor>
      <datatype base="line" xmlns="http://www.mmbase.org/xmlns/datatypes">
        <required value="true" />
        <minLength value="2" />
        <maxLength value="255" />
      </datatype>
    </field>

    <field name="subtitle">
      <descriptions>
        <description xml:lang="en">Subtitle of event</description>
        <description xml:lang="nl">Subtitel van evenement</description>
      </descriptions>
      <gui>
        <guiname xml:lang="en">SubTitle</guiname>
        <guiname xml:lang="fr">Sous-titre</guiname>
        <guiname xml:lang="nl">SubTitel</guiname>
        <guiname xml:lang="eo">Subtitolo</guiname>
      </gui>
      <datatype base="line" xmlns="http://www.mmbase.org/xmlns/datatypes">
        <maxLength value="255" />
      </datatype>
    </field>

	<field name="intro">
      <descriptions>
        <description xml:lang="en">Introduction text or teaser</description>
        <description xml:lang="nl">Introductietekst of teaser</description>
      </descriptions>
      <gui>
          <guiname xml:lang="nl">Intro</guiname>
          <guiname xml:lang="fr">Intro</guiname>
          <guiname xml:lang="en">Intro</guiname>
          <guiname xml:lang="us">Intro</guiname>
      </gui>
      <editor>
          <positions>
            <input>3</input>
            <list>-1</list>
            <search>3</search>
          </positions>
      </editor>
      <datatype base="field" xmlns="http://www.mmbase.org/xmlns/datatypes">
        <maxLength value="2048" />
      </datatype>
	</field>

    <field name="body">
      <descriptions>
        <description xml:lang="en">Main text about the even</description>
        <description xml:lang="nl">Beschrijving van het evenement</description>
      </descriptions>
      <gui>
        <guiname xml:lang="en">Text</guiname>
        <guiname xml:lang="fr">Texte</guiname>
        <guiname xml:lang="nl">Tekst</guiname>
        <guiname xml:lang="eo">Teksto</guiname>
      </gui>
      <datatype base="field" xmlns="http://www.mmbase.org/xmlns/datatypes">
        <maxLength value="64000" />
      </datatype>
    </field>
    
    <field name="date">
      <descriptions>
        <description xml:lang="en">Date and time of event</description>
        <description xml:lang="nl">Datum en tijd van het evenement</description>
      </descriptions>
      <gui>
        <guiname xml:lang="en">Date</guiname>
        <guiname xml:lang="fr">Date</guiname>
        <guiname xml:lang="nl">Datum</guiname>
        <guiname xml:lang="eo">Date</guiname>
      </gui>
      <editor>
        <positions>
          <input>2</input>
          <list>2</list>
          <search>2</search>
        </positions>
      </editor>
      <datatype base="datetime" xmlns="http://www.mmbase.org/xmlns/datatypes">
        <default value="now" />
      </datatype>
    </field>
    

</fieldlist>

</builder>
