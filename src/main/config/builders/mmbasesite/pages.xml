<?xml version="1.0" ?>
<builder 
    xmlns="http://www.mmbase.org/xmlns/builder"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.mmbase.org/xmlns/builder 
                        http://www.mmbase.org/xmlns/builder.xsd"                        
    name="pages" maintainer="mmbase.org" version="1" extends="object">

   <status>active</status>
   <searchage>1000</searchage>
   
   <names>
   	<singular xml:lang="en">Page</singular>
   	<singular xml:lang="nl">Pagina</singular>
   	<plural xml:lang="en">Pages</plural>
   	<plural xml:lang="nl">Pagina's</plural>
   </names>
   <descriptions>
   	<description xml:lang="en">Pages</description>
   	<description xml:lang="nl">Pagina's</description>
   </descriptions>

   <properties />
   
   <fieldlist>
      <field>
         <descriptions>
            <!-- descriptions per language as defined by ISO 639  -->
            <description xml:lang="en">Title of the page</description>
            <description xml:lang="nl">Titel van de pagina</description>
         </descriptions>
   		<gui>
	   		<guiname xml:lang="en">Title</guiname>
	   		<guiname xml:lang="nl">Titel</guiname>
	   </gui>
		
		   <editor>
			   <positions>
				   <!-- position in the input area of the editor -->
				   <input>1</input>
				   <!-- position in list area of the editor -->
				   <list>1</list>
				   <!-- position in search area of the editor -->
				   <search>1</search>
			   </positions>
		   </editor>
		   <!-- database related  -->
      	   <datatype base="line" xmlns="http://www.mmbase.org/xmlns/datatypes" />
		   <db>
   			<!-- name of the field in the database -->
			   <name>title</name>
			   <!-- MMBase datatype and demands on it -->
			   <type state="persistent" size="128" notnull="true" key="false">STRING</type>
		   </db>
	   </field>
	   <field>
	      <descriptions>
            <!-- descriptions per language as defined by ISO 639  -->
            <description xml:lang="en">Menuitem name</description>
            <description xml:lang="nl">Naam van het menu item</description>
         </descriptions>
   		<gui>
	   		<guiname xml:lang="en">Menuname</guiname>
	   		<guiname xml:lang="nl">Menunaam</guiname>
	   </gui>
		
		   <editor>
			   <positions>
				   <!-- position in the input area of the editor -->
				   <input>2</input>
				   <!-- position in list area of the editor -->
				   <list>2</list>
				   <!-- position in search area of the editor -->
				   <search>2</search>
			   </positions>
		   </editor>
		   <!-- database related  -->
		   <db>
   			<!-- name of the field in the database -->
            <datatype base="line" xmlns="http://www.mmbase.org/xmlns/datatypes" />
			   <name>menuname</name>
			   <!-- MMBase datatype and demands on it -->
			   <type state="persistent" size="25" notnull="false" key="false">STRING</type>
		   </db>
	   </field>
   </fieldlist>
</builder>
