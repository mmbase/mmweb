<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema>
	<title>Bijlagen</title>
	
	<action type="create">
		<object type="attachments" />
	</action>
	
	<action type="delete">
		<prompt>Weet u zeker dat u deze bijlage wilt verwijderen?</prompt>
		<description>Klik hier om deze bijlage te verwijderen.</description>
	</action>

	<action type="load">
		<field name="title"><prompt>Naam</prompt></field>
   		<field name="description"><prompt>Korte omschrijving</prompt></field>
		<field name="filename" />
		<field name="mimetype" />
		<field name="handle" />
	</action>

	<steps>
		<step form-schema="step1" />
	</steps>

	<form-schema id="step1">
		<title>Bijlagen (bestanden mogen niet groter dan 1MB zijn)</title>
		<field name="title" ftype="line" dttype="string" dtminlength="1" dtmaxlength="255">
			<prompt>Titel</prompt>
		</field>
		<field name="description" ftype="text" rows="4"><prompt>Beschrijving</prompt></field>
		<field name="handle" ftype="upload" dttype="file"><prompt>Bijlage uploaden</prompt>
	
		</field>
		<field name="filename" ftype="data"><prompt>Bestandsnaam</prompt></field>
		<field name="mimetype" ftype="data"><prompt>Bestandstype</prompt></field>
	</form-schema>	
</wizard-schema>
