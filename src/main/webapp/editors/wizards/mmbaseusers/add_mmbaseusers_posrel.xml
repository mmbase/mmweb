<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="mmbaseusers"
		minoccurs="0" maxoccurs="*"
		hidecommand="move-up,move-down">
	<title>Redactie</title>
	<item>
		<title></title>
		<description></description>
		<field name="username" ftype="data">
			<prompt>Naam</prompt>
		</field>
	</item>
	
	<command name="search" nodepath="mmbaseusers" fields="username" orderby="username" age="-1">
    	<prompt>Zoek voor reeds ingevoerde redactieleden</prompt>
		<search-filter>
			<name>Naam bevat</name>
			<search-fields>username</search-fields>
		</search-filter>
	</command>

	<action type="create">
		<relation role="posrel">
			<object type="websites" />
		</relation>
	</action>
	<command name="startwizard" inline="true" wizardname="wizards/mmbaseusers/mmbaseusers_small" objectnumber="new"/> 
</list>	

