<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="related" destination="packages"
  minoccurs="0" maxoccurs="*">

  <title>Packages</title>
  <item>
	<title></title>
	<field name="name" ftype="data">
		<prompt>Name</prompt>
	</field>
	<field name="versionnumber" ftype="data">
		<prompt>Version</prompt>
	</field>
	<field fdatapath="." ftype="startwizard" inline="true" objectnumber="{object/@number}" wizardname="wizards/packages/packages">
		<prompt>Edit</prompt>
	</field>
   </item>
	  
  <action type="create">
	<relation role="related">
	  <object type="packages" />
	</relation>
  </action>
  
  
  <command name="search" nodepath="packages" fields="name,description" orderby="name,description" age="-1">
	<prompt></prompt>
	<search-filter>
	  <name>Name</name>
	  <search-fields>name</search-fields>
	</search-filter>
	<search-filter>
	  <name>Description</name>
	  <search-fields>description</search-fields>
	</search-filter>
  </command>
	
</list>	
