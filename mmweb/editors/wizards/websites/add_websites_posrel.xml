<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="websites"
		minoccurs="0" maxoccurs="*"
		orderby="name"
		ordertype="string"
		hidecommand="move-up|move-down">
	<title>Websites</title>
	<item>
		<title></title>
		<description></description>
		<field name="name" ftype="data">
			<prompt>Naam</prompt>
		</field>
		<field fdatapath="." ftype="startwizard" inline="true" objectnumber="{object/@number}" wizardname="wizards/websites/websites">
			<prompt></prompt>
		</field>
	</item>
	
	<command name="search" nodepath="websites" fields="name" orderby="name" age="-1">
    	<prompt></prompt>
		<search-filter>
			<name>Naam bevat</name>
			<search-fields>name</search-fields>
		</search-filter>
	</command>

	<action type="create">
		<relation role="posrel">
			<object type="websites" />
			<field name="pos">{sum(//relation[@role=&apos;posrel&apos; and @lastitem=&apos;true&apos;]/field[@name=&apos;pos&apos;])+{$pos}}</field>
		</relation>
	</action>
    <command name="startwizard" inline="true" wizardname="wizards/websites/websites" objectnumber="new"/>
</list>	

