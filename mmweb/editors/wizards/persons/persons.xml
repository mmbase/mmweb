<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="persons">
	<title>People</title>
	<task-description>Use this wizard to edit a person.</task-description>
	
	<action include="wizards/persons/create_persons.xml" />
	
	<action include="wizards/persons/delete_persons.xml" />

	<action include="wizards/persons/load_persons.xml" />

	<steps>
		<step form-schema="edit_persons" />
	</steps>

	<form-schema id="edit_persons">
		<field name="firstname"><prompt>Firstname</prompt></field>
		<field name="initials"><prompt>Initials</prompt></field>
		<field name="suffix"><prompt>Suffix</prompt></field>
		<field name="lastname"><prompt>Lastname</prompt></field>
		<field name="nickname"><prompt>Nickname</prompt></field>
		<field name="address"><prompt>Address</prompt></field>
		<field name="zipcode"><prompt>Zipcode</prompt></field>
		<field name="city"><prompt>City</prompt></field>
		<field name="country"><prompt>Country</prompt></field>
		<field name="privatephone"><prompt>Private phone</prompt></field>
		<field name="companyphone"><prompt>Company phone</prompt></field>
		<field name="cellularphone"><prompt>Cellular phone</prompt></field>
		<field name="fax"><prompt>Fax</prompt></field>
		<field name="email"><prompt>E-mail</prompt></field>
		<field name="comments" ftype="text" rows="4"><prompt>Comments</prompt></field>
		<list include="wizards/images/add_images_posrel_maxone.xml" />
		<list include="wizards/urls/add_urls_posrel_small.xml" />
		<list include="wizards/organisation/add_organisation_posrel.xml" />
		<list include="wizards/groups/add_groups_related.xml" />
		<list include="wizards/project/add_project_posrel.xml" />
</form-schema>

</wizard-schema>
