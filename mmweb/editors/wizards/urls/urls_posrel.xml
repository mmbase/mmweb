<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="edit-url">
	<title>Links</title>
	<task-description>Use this wizard to edit an url.</task-description>
	
	<action type="create">
		<object type="urls">
			<relation role="posrel" destination="{$origin}">
			  <field name="pos">1</field>
			</relation>
			<field name="url">http://</field>
		</object>
	</action>
	
    <action include="wizards/urls/delete_urls.xml" />

	<action include="wizards/urls/load_urls.xml" />
	
	<steps>
		<step form-schema="edit_urls" />
	</steps>

	<form-schema id="edit_urls" extends="wizards/urls/edit_urls.xml" />

</wizard-schema>
