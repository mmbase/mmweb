<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="rolerel" destination="organisation"
		minoccurs="0" maxoccurs="*">

	<title>Organisations</title>
	<item>
		<title>Organisations</title>
		<description></description>
		<field name="name" ftype="data">
			<prompt>Name</prompt>
		</field>
		<field fdatapath="field[@name='role']" ftype="enum">
		  <prompt>Role</prompt>
		  <optionlist select="organisations_rolerel" />
		</field>
		<field ftype="startwizard" wizardname="wizards/organisation/organisation" inline="true" >
			<prompt>Edit</prompt>
		</field>
	</item>
		
	<action type="create">
		<relation role="rolerel">
		    <field name="role">maintainer</field>
			<object type="organisation" />
		</relation>
	</action>
	

	<command name="search" nodepath="organisation" fields="name" orderby="name" age="-1">
    	<prompt></prompt>
		<search-filter>
			<name>Name</name>
			<search-fields>name</search-fields>
		</search-filter>
	</command>
	<command name="startwizard" inline="true" wizardname="wizards/organisation/organisation" objectnumber="new" />
</list>	

