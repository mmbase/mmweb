<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="pages"
	minoccurs="1" maxoccurs="1"
	ordertype="number" orderby="field[@name=&apos;pos&apos;]" >

	<title>Pagina's</title>
	<item>
		<title></title>
		<field name="title" ftype="data">
			<prompt>Naam</prompt>
		</field>
		<list include="wizards/articles/add_articles_posrel_websites.xml" />
    </item>
		
	<action type="create">
		<relation role="posrel">
			<object type="pages" />
	     </relation>
	</action>
	
	<command name="search" nodepath="pages" fields="menuname,title" orderby="menuname,title" age="-1">
    	<prompt></prompt>
		<search-filter>
			<name>Naam bevat</name>
			<search-fields>title</search-fields>
		</search-filter>
		<search-filter>
			<name>Subtitel bevat</name>
			<search-fields>menuname</search-fields>
		</search-filter>
	</command>
	<command name="startwizard" inline="true" wizardname="wizards/pages/pages" objectnumber="new"/>
      
</list>	

