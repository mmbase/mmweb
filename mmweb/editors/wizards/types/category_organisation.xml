<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="category">
	<title>Partner Categories</title>
	<task-description>Use this wizard to edit a partner category.</task-description>
	
	<action include="wizards/category/create_category.xml" />
	
    <action include="wizards/category/delete_category.xml" />

	<action type="load">
		<field name="title" />
		<field name="description" />
  		<relation destination="organisation" role="posrel" />
	</action>

	<steps>
		<step form-schema="edit_category" />
	</steps>

	<form-schema id="edit_category">
		<field name="title">
			<prompt>Titel</prompt>
			<description></description>
		</field>
		<field name="description">
			<prompt>Description</prompt>
			<description></description>
		</field>
		<list include="wizards/organisation/add_organisation_posrel_pos.xml" />

	</form-schema>

</wizard-schema>
