<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="groups"
		minoccurs="0" maxoccurs="*"
		orderby="field[@name='pos']"
		ordertype="number">
	<title>Editwizards voor deze redacteur</title>
	<item>
		<title></title>
		<field name="name" ftype="data"><prompt>Editwizard groep</prompt></field>
		<field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>Positie</prompt></field>
	</item>
	<command name="search" nodepath="groups" fields="name" orderby="name" age="-1">
		<search-filter>
			<name>Naam</name>
			<search-fields>name</search-fields>
		</search-filter>
	</command> 
	<action type="create">
		<relation role="posrel">
			<object type="groups" />
			<field name="pos">{sum(//relation[@role=&apos;posrel&apos; and @lastitem=&apos;true&apos;]/field[@name=&apos;pos&apos;])+{$pos}}</field>
		</relation>
	</action>
</list>		
