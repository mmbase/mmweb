<?xml version="1.0"?>
<!DOCTYPE form-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<form-schema id="edit_images">
	<title>Afbeeldingen uploaden (bestanden mogen niet groter dan 1MB zijn)</title>
	<field name="title" ftype="line" dtminlength="1" dtmaxlength="255">
		<prompt>Naam</prompt>
	</field>
	<field name="description" dtminlength="0" ftype="text" rows="8">
		<prompt>Beschrijving</prompt>
	</field>
	
	<field name="handle" ftype="upload" dttype="image">
		<prompt>Upload</prompt>
	</field>
</form-schema>

