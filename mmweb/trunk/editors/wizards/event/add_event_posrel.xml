<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="event"
		minoccurs="0" maxoccurs="*"
		orderby="field[@name='pos']"
		ordertype="number">

	<title>Categorien</title>
	<item>
		<title>Categorien</title>
		<description></description>
		<field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>Positie</prompt></field>
		<field name="title" ftype="data">
			<prompt>Titel</prompt>
		</field>
		<field name="subtitle" ftype="data">
			 <prompt>Subtitel</prompt>
		</field>
		<field ftype="startwizard" wizardname="wizards/event/event" inline="true" >
			<prompt>Bekijk categorie</prompt>
		</field>
		<list include="wizards/event/add_event_posrel.xml" />
	 </item>
	
	<action type="create">
		<relation role="posrel">
			<object type="event" />
		</relation>
	</action>
	
	
	<command name="search" nodepath="event" fields="title,subtitle,intro,body" age="-1">
    	<prompt></prompt>
		<search-filter>
			<name>Titel bevat</name>
			<search-fields>title</search-fields>
		</search-filter>
		<search-filter>
			<name>Intro bevat</name>
			<search-fields>intro</search-fields>
		</search-filter>
		<search-filter>
			<name>Subtitel bevat</name>
			<search-fields>subtitle</search-fields>
		</search-filter>
		<search-filter>
			<name>Tekst bevat</name>
			<search-fields>body</search-fields>
		</search-filter>
	</command>
      
</list>	

