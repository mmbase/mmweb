<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="edit-mmevents">
	<title>Publicatietijdstip</title>
	<task-description>Use this wizard to edit an mmevent.</task-description>
	
	<action include="wizards/mmevents/create_mmevents.xml" />
	
    <action include="wizards/mmevents/delete_mmevents.xml" />

	<action include="wizards/mmevents/load_mmevents.xml" />
	
	<steps>
		<step form-schema="edit_mmevents" />
	</steps>
	
	<form-schema id="edit_mmevents">
		<title>Publicatietijdstip</title>
		<field name="start" ftype="date" dttype="datetime">
			<prompt>aanvang</prompt>
		</field>
		<field name="stop" ftype="date" dttype="datetime">
			<prompt>einde</prompt>
		</field>
	</form-schema>

</wizard-schema>
