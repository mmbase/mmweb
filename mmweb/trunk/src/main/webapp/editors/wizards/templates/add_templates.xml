<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="related" destination="templates" minoccurs="0" maxoccurs="1">
	<title>Stramien van deze pagina</title>
	<command name="search" nodepath="templates" fields="name,url" age="-1">
		<prompt></prompt>
		<search-filter>
		   <name>Naam bevat</name>
		   <search-fields>name</search-fields>
		</search-filter>
		<search-filter>
		   <name>URL bevat</name>
		   <search-fields>url</search-fields>
		</search-filter>
	</command>
	
	<item>
		<title>Stramien of template</title>
		<description></description>
		<field name="name" ftype="data" >
			<prompt>Naam template</prompt>
		</field>
		<field name="url" ftype="data" >
			<prompt>URL template</prompt>
		</field>
	</item>

	<action type="create">
		<relation role="related" destinationtype="templates" />
	</action>
</list>

