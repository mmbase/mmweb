<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="images"
		minoccurs="0" maxoccurs="*"
		orderby="field[@name='pos']"
		ordertype="number">
	<title>Afbeeldingen</title>
	<item displaymode="section" displaytype="image">
		<title></title>
		<description></description>
		<field name="title" ftype="data" ><prompt>Naam</prompt></field>
		<field fdatapath="field[@name='pos']" ftype="enum"><prompt>Positie</prompt>
				<optionlist select="images_position"></optionlist>
		</field>
		<field fdatapath="." ftype="startwizard" inline="true" objectnumber="{object/@number}" wizardname="wizards/images/images">
				<prompt></prompt>
		</field>
	</item>
	<command name="search" nodepath="images" fields="title" age="-1">
		<prompt></prompt>
		<search-filter>
			<name>Titel bevat</name>
			<search-fields>title</search-fields>
		</search-filter>
	</command>
	<command name="startwizard" inline="true" wizardname="wizards/images/images" objectnumber="new"/>
	<action type="create">
		<relation role="posrel">
			<object type="images" >
				<field name="pos">2</field>
			</object>
		</relation>
	</action>
</list>
