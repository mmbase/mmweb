<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="news"
	minoccurs="0" maxoccurs="*"
	orderby="field[@name='pos']"
	ordertype="number">

	<title>Nieuws en portofolio</title>
	<item>
		<title></title>
		<description></description>
		<field fdatapath="field[@name=&apos;pos&apos;]" >
					 <prompt>Positie</prompt>
		</field>
		<field name="title" ftype="data">
			<prompt>Titel</prompt>
		</field>
		<field fdatapath="." ftype="startwizard" inline="true" objectnumber="{object/@number}" wizardname="wizards/news/news">
			<prompt></prompt>
		</field>
	</item>
		
	<action type="create">
		<relation role="posrel">
			<object type="news" />
				<field name="pos">{sum(//relation[@role=&apos;posrel&apos; and @lastitem=&apos;true&apos;]/field[@name=&apos;pos&apos;])+{$pos}}</field>
		</relation>
	</action>
	
	<command name="search" nodepath="news" fields="title" orderby="title" age="-1">
    	<prompt></prompt>
		<search-filter>
			<name>Titel bevat</name>
			<search-fields>title</search-fields>
		</search-filter>
	</command>
	<command name="startwizard" inline="true" wizardname="wizards/news/news" objectnumber="new"/>
      
</list>	

