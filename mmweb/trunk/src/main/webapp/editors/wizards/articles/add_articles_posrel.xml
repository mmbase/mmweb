<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="articles"
	minoccurs="0" maxoccurs="*"
	orderby="field[@name='pos']"
	ordertype="number" hidecommand="move-up|move-down">

	<title>Artikelen</title>
	<item>
		<title></title>
		<description>artikelen</description>
		<field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>Positie</prompt></field>
		<field name="title" ftype="data">
			<prompt>Titel</prompt>
		</field>
		<field fdatapath="." ftype="startwizard" inline="true" objectnumber="{object/@number}" wizardname="wizards/articles/articles">
			<prompt></prompt>
		</field>
<!--		<field name="displaydate">
			<prompt>Verschijningsdatum</prompt>
		</field>
		<field name="expiredate">
			<prompt>Verwijderdatum</prompt>
		</field>
-->	</item>
		
	<action type="create">
		<relation role="posrel">
			<object type="articles" />
				<field name="pos"></field>
		</relation>
	</action>
	
	<command name="search" nodepath="articles" fields="title" orderby="title" age="-1">
    	<prompt></prompt>
		<search-filter>
			<name>Titel bevat</name>
			<search-fields>title</search-fields>
		</search-filter>
	</command>
	<command name="startwizard" inline="true" wizardname="wizards/articles/articles" objectnumber="new"/>
      
</list>	

