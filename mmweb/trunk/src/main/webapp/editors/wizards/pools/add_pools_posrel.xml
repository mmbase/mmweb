<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="pools"
		minoccurs="0" maxoccurs="*"
		orderby="field[@name='pos']"
		ordertype="number">

	<title xml:lang="nl">Categorie(en)</title>
	<title xml:lang="en">Items</title>
	<item>
		<title></title>
		<description></description>
		<field fdatapath="field[@name=&apos;pos&apos;]" ftype="line">
			<prompt xml:lang="nl">Positie</prompt>
			<prompt xml:lang="en">Position</prompt>
		</field>
		<field name="name" ftype="data">
			<prompt xml:lang="nl">Naam</prompt>
			<prompt xml:lang="en">Name</prompt>
		</field>
		<field fdatapath="." ftype="startwizard" inline="true" objectnumber="{object/@number}" wizardname="wizards/pools/pools">
			<prompt></prompt>
		</field>
	 </item>
		
	<action type="create">
		<relation role="posrel">
			<object type="pools" />
			<field name="pos">{sum(//relation[@role=&apos;posrel&apos; and @lastitem=&apos;true&apos;]/field[@name=&apos;pos&apos;])+{$pos}}</field>
		</relation>
	</action>
	
	<command name="startwizard" inline="true" wizardname="wizards/pools/pools" objectnumber="new"/>
	<command name="search" nodepath="pools" fields="name" orderby="name" age="-1">
    	<prompt></prompt>
		<search-filter>
			<name xml:lang="nl">Naam bevat</name>
			<name xml:lang="en">Name contains</name>
			<search-fields>name</search-fields>
		</search-filter>
	</command>
      	
</list>	

