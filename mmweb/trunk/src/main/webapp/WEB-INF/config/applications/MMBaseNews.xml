<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE application PUBLIC "-//MMBase//DTD application config 1.1//EN" "http://www.mmbase.org/dtd/application_1_1.dtd">
<application name="MMBaseNews" maintainer="mmbase.org" version="1" auto-deploy="false">
  <requirements>
    <requires name="Resources" maintainer="mmbase.org" />
    <requires name="MyNews" maintainer="mmbase.org" />
  </requirements>

  <neededbuilderlist>
    <builder maintainer="mmbase.org" version="1">category</builder>
    <builder maintainer="mmbase.org" version="1">news</builder>
    
    <builder maintainer="mmbase.org" version="1">urls</builder>
    <builder maintainer="mmbase.org" version="1">attachments</builder>
    <builder maintainer="mmbase.org" version="1">images</builder>
    
    <builder maintainer="mmbase.org" version="1">posrel</builder>
    <builder maintainer="mmbase.org" version="1">insrel</builder>
    
    <builder maintainer="mmbase.org" version="1">mmevents</builder>
  </neededbuilderlist>

  <neededreldeflist>
    <reldef source="related" target="related" direction="bidirectional" guisourcename="Related" guitargetname="Related" builder="insrel" />
    <reldef source="posrel"  target="posrel" direction="bidirectional" guisourcename="Posrel" guitargetname="Posrel" builder="posrel" />
  </neededreldeflist>

  <allowedrelationlist>
    <relation from="category" to="news"     type="posrel" />
    
    <relation from="news"     to="urls"     type="posrel" />
    <relation from="news"     to="images"   type="posrel" />
    <relation from="news"     to="attachments"  type="posrel" />
    
    <relation from="news"     to="mmevents" type="related" />
  </allowedrelationlist>

  <datasourcelist>
    <datasource builder="category" path="MMBaseNews/category.xml" />
    <datasource builder="news"     path="MMBaseNews/news.xml" />
    <datasource builder="urls"     path="MMBaseNews/urls.xml" />
    <datasource builder="attachments"  path="MMBaseNews/attachments.xml" />
    <datasource builder="images"   path="MMBaseNews/images.xml" />
    <datasource builder="mmevents" path="MMBaseNews/mmevents.xml" />
  </datasourcelist>

  <relationsourcelist>
    <relationsource builder="insrel" path="MMBaseNews/insrel.xml" />
    <relationsource builder="posrel" path="MMBaseNews/posrel.xml" />
  </relationsourcelist>

  <contextsourcelist>
    <contextsource path="MMBaseNews/backup.xml" type="depth" goal="backup"/>
  </contextsourcelist>

  <description>
    <![CDATA[MMBaseNews contains all mmbase.org news articles. It depends on the Resources application.]]>
  </description>

  <install-notice>
    <![CDATA[The MMBaseNews application is installed.]]>
  </install-notice>
</application>
