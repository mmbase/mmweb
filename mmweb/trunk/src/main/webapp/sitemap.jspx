<jsp:root
    version="2.0"
    xmlns:jsp="http://java.sun.com/JSP/Page"
    xmlns:c="http://java.sun.com/jsp/jstl/core"
    xmlns:x="http://java.sun.com/jsp/jstl/xml"
    xmlns:os="http://www.opensymphony.com/oscache"
    xmlns:mm="http://www.mmbase.org/mmbase-taglib-2.0"
    xmlns:mmweb="urn:jsptagdir:/WEB-INF/tags/mmweb">
  <mmweb:html styleClass="contact">
    <jsp:attribute name="title">Contact</jsp:attribute>
    <jsp:attribute name="head">
    
    </jsp:attribute>
    <jsp:attribute name="body">
      <mmweb:submenu page="${page}" />
      <div id="content">
        <div>
          <h2>Sitemap</h2>
          
          <mm:node number="pool_mmbase">
            <mm:relatednodescontainer type="pages" role="posrel" searchdirs="destination">
              <ol>
                <mm:relatednodes>
                  <li>
                    <a href="_node.path"><mm:field name="title" /></a> 
                    <mm:relatednodescontainer type="pages" role="posrel" searchdirs="destination">
                      <ol>
                        <mm:relatednodes>
                          <li>
                            <a href="${_node.path}"><mm:field name="title" /></a>
                            <mm:relatednodescontainer type="pages" role="posrel" searchdirs="destination">
                              <ol>
                                <mm:relatednodes>
                                  <li>
                                    <a href="${_node.path}"><mm:field name="title" /></a>
                                  </li>
                                </mm:relatednodes>
                              </ol>
                            </mm:relatednodescontainer>
                          </li>
                        </mm:relatednodes>
                      </ol>
                    </mm:relatednodescontainer>
                  </li>
                </mm:relatednodes>
              </ol>
            </mm:relatednodescontainer>
          </mm:node>
          
          

        </div>
      </div>
    
      <div id="sidebar">
        <div>
          <h4>Address etc.</h4>
          <p>
            E-mail addresses, other contact information.
          </p>

        </div>
      </div>
  
    </jsp:attribute>
  </mmweb:html>
</jsp:root>
