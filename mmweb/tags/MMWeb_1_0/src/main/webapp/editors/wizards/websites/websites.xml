<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="edit-site">
	<title>Website</title>
	<task-description>Use this wizard to edit a website.</task-description>
	
	<action include="wizards/websites/create_websites.xml" />
	
    <action include="wizards/websites/delete_websites.xml" />

	<action include="wizards/websites/load_websites.xml" />

	<steps>
		<step form-schema="edit_site" />
	</steps>
	
	<form-schema id="edit_site">
		<field name="name" dtminlength="1" dtmaxlength="100">
			<prompt>Naam van de website</prompt>
		</field>
		<field name="menuname" dtminlength="1" dtmaxlength="100">
			<prompt>Subtitel (bv. naam van het project)</prompt>
		</field>
		<field name="expiredate">
			<prompt>Verschijnings datum</prompt>
		</field>
		<list include="wizards/articles/add_articles_posrel_websites.xml" />
		<list include="wizards/images/add_images_posrel_websites.xml" />
		<list include="wizards/pages/add_pages_posrel_websites.xml" />
		<list include="wizards/mmbaseusers/add_mmbaseusers_posrel.xml" />
	</form-schema>

</wizard-schema>
