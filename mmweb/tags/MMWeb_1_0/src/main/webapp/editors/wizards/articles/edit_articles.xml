<!DOCTYPE form-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<form-schema id="edit_article">
	<title></title>
	<field name="title" dtminlength="1" ><prompt>Titel (eventueel #NZ#...)</prompt></field>
	<field name="subtitle" ><prompt>Subtitel</prompt></field>
	<field name="intro" ftype="text" rows="8" ><prompt>Introductie</prompt></field>
	<field name="body" ftype="text" rows="8" ><prompt>Tekst</prompt></field>
	<field name="source"><prompt>Bronvermelding - optioneel</prompt></field>
	<field name="lastmodified"><prompt>Datum laatste wijziging</prompt></field>
	<field name="copyright" dtminlength="0" ftype="line"><prompt>Laatste wijziging door</prompt></field>
	<field name="displaydate"><prompt>Verschijnings datum</prompt></field>
	<field name="expiredate"><prompt>Verwijder datum</prompt></field>
	<list include="wizards/urls/add_urls_posrel.xml"/>
	<list include="wizards/images/add_images_posrel.xml"/>
	<list include="wizards/attachments/add_attachments_posrel.xml"/>
</form-schema>

