<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="rolerel" destination="persons" minoccurs="0" maxoccurs="*">

	<title>People</title>
	<item>
		<title>Persons and their role</title>
		<description></description>
		<field name="firstname" ftype="data">
			<prompt>Firstname</prompt>
		</field>
		<field name="suffix" ftype="data">
			<prompt>Suffix</prompt>
		</field>
		<field name="lastname" ftype="data">
			<prompt>Lastname</prompt>
		</field>
		<field fdatapath="field[@name='role']" ftype="enum">
		  <prompt>Role</prompt>
		  <optionlist select="persons_rolerel" />
		</field>
		<field ftype="startwizard" wizardname="wizards/persons/persons" inline="true" >
			<prompt>Edit</prompt>
		</field>
	</item>
		
	<action type="create">
		<relation role="rolerel">
		    <field name="role">developer</field>
			<object type="persons" />
		</relation>
	</action>
	
	<command name="search" nodepath="persons" fields="firstname,lastname" orderby="lastname" age="-1">
    	<prompt></prompt>
		<search-filter>
			<name>Firstname</name>
			<search-fields>firstname</search-fields>
		</search-filter>
		<search-filter>
			<name>Lastname contains</name>
			<search-fields>lastname</search-fields>
		</search-filter>
	</command>
    <command name="startwizard" inline="true" wizardname="wizards/persons/persons" objectnumber="new" />
      
</list>	

