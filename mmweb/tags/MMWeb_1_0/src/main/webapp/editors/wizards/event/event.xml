<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="event">
	<title>Categorieen</title>
	<task-description>Use this wizard to edit an event.</task-description>
	
	<action include="wizards/event/create_event.xml" />
	
    <action include="wizards/event/delete_event.xml" />

	<action include="wizards/event/load_event.xml" />

	<steps>
		<step form-schema="edit_event" />
	</steps>

	<form-schema id="edit_event">
		<list include="wizards/category/add_category_posrel.xml" />
		<field name="title">
			<prompt>Titel</prompt>
			<description></description>
		</field>
		<field name="subtitle">
		      <prompt>Subtitel</prompt>
		      <description></description>
		</field>
		<field name="intro">
		      <prompt>Intro</prompt>
		      <description></description>
		</field>
		<field name="body">
		      <prompt>Tekst</prompt>
		      <description></description>
		</field>
		<list include="wizards/mmevents/add_mmevents.xml" />
		<list include="wizards/urls/add_urls_posrel.xml" />
</form-schema>

</wizard-schema>
