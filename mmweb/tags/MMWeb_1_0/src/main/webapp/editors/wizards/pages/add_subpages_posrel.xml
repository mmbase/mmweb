<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="pages"
	minoccurs="0" maxoccurs="*"
	ordertype="number" orderby="field[@name=&apos;pos&apos;]" >

	<title>Subpagina's</title>
	<item>
		<title></title>
		<field name="title" ftype="data">
			<prompt>Naam</prompt>
		</field>
		<field fdatapath="field[@name=&apos;pos&apos;]" >
			 <prompt>Positie</prompt>
		</field>
		<field fdatapath="." ftype="startwizard" inline="true" objectnumber="{object/@number}" wizardname="wizards/pages/pages">
			<prompt></prompt>
		</field>
   	 </item>
		
	<action type="create">
		<relation role="posrel">
			<object type="pages" />
			 <field name="pos">{sum(//relation[@role=&apos;posrel&apos; and @lastitem=&apos;true&apos;]/field[@name=&apos;pos&apos;])+{$pos}}</field>
       		</relation>
	</action>
	
	
	<command name="search" nodepath="pages" fields="menuname,title" orderby="menuname,title" age="-1">
	    	<prompt></prompt>
			<search-filter>
				<name>Naam bevat</name>
				<search-fields>title</search-fields>
			</search-filter>
			<search-filter>
				<name>Subtitel bevat</name>
				<search-fields>menuname</search-fields>
			</search-filter>
	</command>
	<command name="startwizard" inline="true" wizardname="wizards/pages/pages" objectnumber="new"/>
      
</list>	

