<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="edit-poll">
	<title>Redacteur</title>
	<task-description></task-description>
	
	<action include="wizards/mmbaseusers/create_mmbaseusers.xml" />
	
	<action include="wizards/mmbaseusers/delete_mmbaseusers.xml" />

	<action include="wizards/mmbaseusers/load_mmbaseusers.xml" />
	
	<steps>
		<step form-schema="edit_mmbaseusers" />
	</steps>
	
	<form-schema id="edit_mmbaseusers">
		<title>Maak een nieuwe redacteur aan, of bewerk een bestaande</title>
		<field name="username" dtminlength="1"><prompt>Username</prompt></field>
		<field name="password" dtminlength="1"><prompt>Password</prompt></field>
	</form-schema>

</wizard-schema>
