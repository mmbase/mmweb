<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="readmore" destination="pages"
	minoccurs="0" maxoccurs="*" >

	<title>Pagina's waarnaar wordt doorverwezen</title>
	<item>
		<title></title>
		<description></description>
		<field name="title" ftype="data">
			<prompt>Naam</prompt>
		</field>
		<field fdatapath="field[@name=&apos;readmore&apos;]" >
			 <prompt>Inleidend tekst voor de doorverwijzing</prompt>
		</field>
   	 </item>
		
	<action type="create">
		<relation role="readmore">
			<object type="pages" />
			 <field name="readmore">Lees verder op pagina</field>
       		</relation>
	</action>
	
	<command name="search" nodepath="pages" fields="menuname,title" orderby="menuname,title" age="-1">
	    	<prompt></prompt>
			<search-filter>
				<name>Naam bevat</name>
				<search-fields>title</search-fields>
			</search-filter>
			<search-filter>
				<name>Subtitel bevat</name>
				<search-fields>menuname</search-fields>
			</search-filter>
	</command>
      
</list>	

