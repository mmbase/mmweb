<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE security PUBLIC "-//MMBase//DTD classsecurity config 1.0//EN" "http://www.mmbase.org/dtd/classsecurity_1_0.dtd">
<security>

  <authentication class="org.mmbase.security.implementation.context.ContextAuthentication" url="context/config.xml" />

  <!-- all jsp's of bugtracker may use 'class' authentication --> 
  <authenticate class="org\.apache\.jsp\.development\.bugtracker\..*">
    <property name="username" value="admin" />
  </authenticate>
  
  <authenticate class="org\.apache\.jsp\.login\.loginpage_jsp.class">
    <property name="username" value="site" />
  </authenticate>

  <authenticate class="org\.apache\.jsp\..*people\..*">
    <property name="rank" value="administrator" />
  </authenticate>

  <authenticate class="org\.mmbase\.applications\.principletracker\..*">
    <property name="rank" value="administrator" />
  </authenticate>


</security>
