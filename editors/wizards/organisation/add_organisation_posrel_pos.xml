<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="organisation"
		minoccurs="0" maxoccurs="*"
		orderby="field[@name='pos']"
		ordertype="number"
		hidecommand="move-up|move-down">

	<title>Organisations</title>
	<item>
		<title>Organisations</title>
		<description></description>
		<field name="name" ftype="data">
			<prompt>Name</prompt>
		</field>
		<field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>Positie</prompt></field>
		<field fdatapath="." ftype="startwizard" inline="true" objectnumber="{object/@number}" wizardname="wizards/organisation/organisation">
			<prompt></prompt>
		</field>
	</item>
		
	<action type="create">
		<relation role="posrel">
			<object type="organisation" />
		</relation>
	</action>
	
	<command name="insert" />

	<command name="search" nodepath="organisation" fields="name" orderby="name" age="-1">
    	<prompt></prompt>
		<search-filter>
			<name>Name</name>
			<search-fields>name</search-fields>
		</search-filter>
	</command>
</list>	

