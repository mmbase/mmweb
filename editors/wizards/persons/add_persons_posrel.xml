<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="persons"
		minoccurs="0" maxoccurs="*"
		orderby="field[@name='pos']"
		ordertype="number">

	<title>People</title>
	<item>
		<title>People</title>
		<description></description>
		<field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>Positie</prompt></field>
		<field name="firstname" ftype="data">
			<prompt>Firstname</prompt>
		</field>
		<field name="suffix" ftype="data">
			<prompt>Suffix</prompt>
		</field>
		<field name="lastname" ftype="data">
			<prompt>Lastname</prompt>
		</field>
		<field ftype="startwizard" wizardname="wizards/persons/persons" inline="true" >
			<prompt></prompt>
		</field>
	</item>
		
	<action type="create">
		<relation role="posrel">
			<object type="persons" />
		</relation>
	</action>
	
	<command name="search" nodepath="persons" fields="firstname,lastname" orderby="lastname" age="-1">
    	<prompt></prompt>
		<search-filter>
			<name>Firstname</name>
			<search-fields>firstname</search-fields>
		</search-filter>
		<search-filter>
			<name>Lastname contains</name>
			<search-fields>lastname</search-fields>
		</search-filter>
	</command>
      
</list>	

