<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="related" destination="packagetypes"
	minoccurs="0" maxoccurs="*">

	<title>Packagetypes</title>
	<item>
		<title>Packagetypes</title>
		<description></description>
		<field name="name" ftype="data">
			<prompt>Name</prompt>
		</field>
		<field ftype="startwizard" wizardname="wizards/packagetypes/packagetypes" inline="true" >
			<prompt>Edit packagetype</prompt>
		</field>
	 </item>
		
	<action type="create">
		<relation role="related">
			<object type="packagetypes" />
		</relation>
	</action>
	
	
	<command name="search" nodepath="packagetypes" fields="name,description" orderby="name" age="-1">
    	<prompt></prompt>
		<search-filter>
			<name>Name contains</name>
			<search-fields>name</search-fields>
		</search-filter>
		<search-filter>
			<name>Description contains</name>
			<search-fields>description</search-fields>
		</search-filter>
	</command>
	<command name="startwizard" inline="true" wizardname="wizards/packagetypes/packagetypes" objectnumber="new"/>
      
</list>	

