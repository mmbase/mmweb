<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="packagetypes">
	<title>Packagetypes</title>
	<task-description>Use this wizard to edit a packagetypes.</task-description>
	
	<action type="create">
		<object type="packagetypes" />
	</action>
	
	<action type="delete">
		<prompt>Weet u zeker dat u deze categorie wilt verwijderen ?</prompt>
		<description>Klik hier om deze categorie te verwijderen.</description>
	</action>

	<action type="load">
		<relation destination="packages" role="related" />
	</action>

	<steps>
		<step form-schema="edit_packagetypes" />
	</steps>

	<form-schema id="edit_packagetypes">
		<title>Packagetypes</title>
		<field name="name">
			<prompt>Name</prompt>
			<description>Type of package</description>
		</field>
		<field  ftype="text" rows="3" name="description">
		      <prompt>Description</prompt>
		      <description>Description of this type</description>
		</field>
		<list include="wizards/packages/add_packages.xml" />
    </form-schema>

</wizard-schema>
